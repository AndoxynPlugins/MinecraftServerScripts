#!/bin/bash
jarfile="$HOME/jars/craftbukkit.jar"
xmx="`cat $HOME/.server-xmx`"
xms="`cat $HOME/.server-xms`"
if [[ ! "$xmx" ]]; then
    xmx="1g"
fi
if [[ ! "$xms" ]]; then
    xms="$xmx"
fi
mc-log "[mc-start] Running; jar=$jarfile; xmx=$xmx; xms=$xms"

cd "$HOME/server/"
java -Xms"$xms" -Xmx"$xmx" -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=128m -jar "$jarfile" --log-strip-color
mc-log "[mc-start] Done"
